<div class="game-show-container">
  <h1 class="game-title"><%= @game.title %></h1>

  <div class="game-content">
    <div class="game-banner">
      <img src="https://res.cloudinary.com/dqrvcexoy/image/upload/<%= @game.cloudinary_public_id %>.jpg" alt="<%= @game.title %> Banner">
    </div>

    <div class="game-info">
      <p class="game-description"><%= @game.description %></p>
      <ul class="game-meta">
        <li><strong>Genre:</strong> <%= @game.genre %></li>
        <li><strong>Platform:</strong> <%= @game.platform %></li>
        <li><strong>Players:</strong> <%= @game.players %></li>
      </ul>

      <a href="#" class="btn-join-lobby">Join Lobby</a>

      <div class="back-button-container">
        <%= link_to '← Back to Games', games_path, class: 'btn-back' %>
      </div>
    </div>
  </div>
</div>
